<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mia_hometest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- 여기서 요일, 달력 안 숫자들의 폰트 설정을 수행할 수 있다 -->
    <style name="CalenderNumber">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/normal</item>
    </style>

    <style name="CalenderWeekDays" >
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="CalenderHeader"> <!-- calender header (year , month) -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>



</resources>